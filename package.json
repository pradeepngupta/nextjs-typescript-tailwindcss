{
  "name": "nextjs-typescript-tailwindcss",
  "private": true,
  "homepage": "https://pradeepngupta.github.io/nextjs-typescript-tailwindcss/",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --check . --config ./.prettierrc",
    "format:fix": "prettier --write . --config ./.prettierrc",
    "prepare": "husky && husky install",
    "pretest": "npm run lint && tsc --noEmit",
    "posttest": "npm run format"
  },
  "dependencies": {
    "next": "15.1.4",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@types/node": "22.10.5",
    "@types/react": "19.0.4",
    "@typescript-eslint/eslint-plugin": "8.19.1",
    "@typescript-eslint/parser": "8.19.1",
    "eslint": "9.17.0",
    "eslint-config-next": "15.1.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "husky": "9.1.7",
    "prettier": "3.4.2"
  },
  "engines": {
    "node": ">=16"
  },
  "lint-staged": {
    "*.ts|*.tsx|*.js|*.jsx": "npm run lint",
    "*": "npm run format:fix"
  },
  "license": "MIT"
}
